genrule(
    name = "mkhdrs",
    srcs = [
        "lex_keywords.c",
        "lex_numbers.c",
        "lex_punctuation.c",
        "lex_strings.c",
        "syntax_call_expr.c",
        "syntax_dict.c",
        "syntax_expressions.c",
        "syntax_lists.c",
        "syntax_slices.c",
        "syntax_statements.c",
        # "//src/lib/obazl_starlark:emit_build_bazel.c",
        "//src/lib/obazl_starlark:obazl_starlark.c",
        "//src/lib/obazl_starlark:obazl_starlark_lexer.c",
        "//src/lib/obazl_starlark:obazl_starlark_nodes.c",
        "//src/lib/obazl_starlark:obazl_starlark_parser.c",
        "//src/lib/obazl_starlark:obazl_starlark_serialize.c",
        "//src/lib/obazl_starlark:token_debug.c",
        # "//src/lib/obazl_starlark:test_lex.c",
        # "//src/lib/obazl_starlark/test_parse.c",
        "//src/lib/obazl_utils:obazl_utils.c",
    ],
    outs = [
        "lex_keywords.h",
        "lex_numbers.h",
        "lex_punctuation.h",
        "lex_strings.h",
        "syntax_call_expr.h",
        "syntax_dict.h",
        "syntax_expressions.h",
        "syntax_lists.h",
        "syntax_slices.h",
        "syntax_statements.h",
    ],
    cmd = "\n".join([
        "SRC1=$(location lex_strings.c)",
        "SRCDIR1=`dirname $$SRC1`",
        "SRC2=$(location //src/lib/obazl_starlark:obazl_starlark.c)",
        "SRCDIR2=`dirname $$SRC2`",
        "$(location @makeheaders//:makeheaders) \\",
        "    $(location lex_keywords.c) \\",
        "    $(location lex_numbers.c) \\",
        "    $(location lex_punctuation.c) \\",
        "    $(location lex_strings.c) \\",
        "    $(location syntax_call_expr.c) \\",
        "    $(location syntax_dict.c) \\",
        "    $(location syntax_expressions.c) \\",
        "    $(location syntax_lists.c) \\",
        "    $(location syntax_slices.c) \\",
        "    $(location syntax_statements.c) \\",
        "    $(location //src/lib/obazl_starlark:obazl_starlark.c) \\",
        "    $(location //src/lib/obazl_starlark:obazl_starlark_lexer.c) \\",
        "    $(location //src/lib/obazl_starlark:obazl_starlark_nodes.c) \\",
        "    $(location //src/lib/obazl_starlark:obazl_starlark_parser.c) \\",
        "    $(location //src/lib/obazl_starlark:obazl_starlark_serialize.c) \\",
        "    $(location //src/lib/obazl_starlark:token_debug.c) \\",
        "    $(location //src/lib/obazl_utils:obazl_utils.c)",
        "cp $${SRCDIR1}/*.h $(@D)",
    ]),
    tools = ["@makeheaders//:makeheaders"],
    visibility = ["//visibility:public"]
)
